<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_upload_photo"
        android:layout_margin="@dimen/margin_size_2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:visibility="gone"
        android:background="@color/transparentGrayLight">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_upload_photo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/upload_photo"/>
        </LinearLayout>
    </RelativeLayout>

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/niv_album_item"
        android:layout_margin="@dimen/margin_size_2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:background="@color/myGrayLight"/>

    <ImageView
        android:id="@+id/iv_play_album"
        android:visibility="gone"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/play_token"/>

</RelativeLayout>