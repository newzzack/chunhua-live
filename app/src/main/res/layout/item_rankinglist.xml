                <!--android:text="1111"-->
                <!--android:layout_alignBottom="@id/ranking_item_diadem"-->
                <!--/>-->
        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/itemLine" />
</LinearLayout>
