<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/ll_left_item_discover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_size_4"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.quootta.mdate.ui.view.CircleImageView
            android:id="@+id/iv_head_item_discover"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@mipmap/personal_details_loading_page2"
            app:border_width="1dp"
            app:border_color="@color/myPink"
            />

        <TextView
            android:id="@+id/tv_name_item_discover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/myBlack"
            android:textSize="@dimen/font_size_14"
            android:layout_margin="@dimen/margin_size_4"
            android:text="name"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tv_age_item_discover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/myGray"
            android:textSize="@dimen/font_size_10"
            android:text="age"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/tv_city_item_discover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/myPink"
            android:textSize="@dimen/font_size_12"
            android:text="city"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="@dimen/margin_size_2"
            android:layout_marginBottom="@dimen/margin_size_2"
            android:src="@mipmap/camera_selected"/>

        <TextView
            android:id="@+id/tv_connection_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/myPink"
            android:textSize="@dimen/font_size_10"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="320dp"
        android:layout_height="270dp"
        android:layout_marginLeft="@dimen/margin_size_6"
        android:layout_marginRight="@dimen/margin_size_8"
        android:layout_marginTop="@dimen/margin_size_4"
        android:layout_marginBottom="@dimen/margin_size_4"
        android:background="@drawable/bg_discover_frame"
        android:layout_toRightOf="@id/ll_left_item_discover">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/niv_show_item_discover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_discover_frame"
            android:src="@mipmap/home_show_loading" />

        <ImageView
            android:id="@+id/iv_like_item_discover"
            android:layout_width="30dp"
            android:layout_height="27dp"
            android:layout_marginRight="@dimen/margin_size_8"
            android:layout_marginTop="@dimen/margin_size_8"
            android:layout_gravity="right"
            android:src="@drawable/selector_like"
            android:clickable="true"
            android:focusable="false"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/padding_size_6"
            android:paddingBottom="@dimen/padding_size_6"
            android:background="@color/transparentGray"
            android:layout_gravity="bottom">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size_8"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="@dimen/margin_size_4"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_video_home" />

                <TextView
                    android:id="@+id/tv_video_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/myWhite"
                    android:textSize="@dimen/font_size_10"
                    android:text="test"/>
            </LinearLayout>

            <!--<LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_size_8"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="@dimen/margin_size_4"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_time_nor" />

                <TextView
                    android:id="@+id/tv_time_item_discover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/myWhite"
                    android:textSize="@dimen/font_size_10"
                    android:text="test"/>
            </LinearLayout>-->

            <!--<LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_size_8"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="@dimen/margin_size_4"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_distance_nor" />

                <TextView
                    android:id="@+id/tv_distance_item_discover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/myWhite"
                    android:textSize="@dimen/font_size_10"
                    android:text="test"/>
            </LinearLayout>-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_size_8"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="@dimen/margin_size_4"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_voic_home" />

                <TextView
                    android:id="@+id/tv_audio_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/myWhite"
                    android:textSize="@dimen/font_size_10"
                    android:text="test"/>
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>