<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="149dp"
    android:layout_margin="7dp"
    app:cardCornerRadius="6dp"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/iv_show"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="180dp"/>

        <RelativeLayout
            android:id="@+id/view_trans"
            android:layout_alignBottom="@id/iv_show"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@drawable/shape_button"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="6dp">

            <ImageView
                android:id="@+id/iv_gender_label"
                android:layout_width="9dp"
                android:layout_height="12dp"
                android:src="@mipmap/ic_gender_female_selected"
                android:layout_centerVertical="true"
                android:layout_marginRight="13dp"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_head_city"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_alignTop="@+id/view_trans"
            >

            <com.quootta.mdate.ui.view.CircleImageView
                android:id="@+id/iv_head_pic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="5dp"
                app:border_width="1dp"
                android:visibility="gone"
                app:border_color="@color/myWhite"
                android:layout_marginBottom="1dp"/>

            <!--<TextView-->
                <!--android:id="@+id/tv_city"-->
                <!--android:layout_below="@id/iv_head_pic"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:lines="1"-->
                <!--android:maxEms="5"-->
                <!--android:textSize="9sp"-->
                <!--android:textColor="@color/myTextBlack"-->

                <!--/>-->
        </LinearLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_alignBottom="@id/iv_show"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:lines="1"
            android:gravity="center"
            android:maxEms="5"
            android:ellipsize="end"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="17dp"
            android:textSize="@dimen/font_size_10"
            android:textColor="@color/myWhite" />




<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/view_trans"
    android:layout_toRightOf="@id/ll_head_city"
    android:layout_centerVertical="true"
    >


    <!--<ImageView-->
        <!--android:layout_width="9dp"-->
