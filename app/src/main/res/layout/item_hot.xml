        <!--android:layout_centerVertical="true"-->
        <!--android:layout_toLeftOf="@+id/tv_city"-->
        <!--android:layout_alignBottom="@id/tv_city"-->
        <!--/>-->
    <ImageView
        android:id="@+id/iv_gender_label"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:src="@drawable/sugnup_boy_down"
        android:paddingBottom="2dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_age"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="@color/hot_textcolor"
        android:text="18"
        android:layout_marginLeft="4dp"
        android:textSize="13sp"
        android:layout_alignBottom="@+id/iv_gender_label"
        android:layout_toRightOf="@+id/iv_gender_label"
        android:layout_toEndOf="@+id/iv_gender_label" />
    <TextView
        android:id="@+id/tv_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:maxEms="5"
        android:textSize="12sp"
        android:layout_marginRight="10dp"
        android:textColor="@color/hot_textcolor"
        android:gravity="center"
        android:text="city"
        android:layout_alignBottom="@+id/tv_age"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


