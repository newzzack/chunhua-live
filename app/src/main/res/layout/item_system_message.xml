<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_invite_me_item"
        android:layout_width="330dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_size_6"
        android:layout_marginBottom="@dimen/margin_size_6"
        android:padding="0dp"
        android:layout_gravity="center_horizontal"
        card_view:cardCornerRadius="6dp"
        card_view:cardBackgroundColor="@color/myWhite">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/v_status_system_message_item"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/margin_size_12"
                android:background="@drawable/shape_pink_view"/>

            <TextView
                android:id="@+id/tv_name_system_message_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_16"
                android:layout_marginTop="@dimen/margin_size_4"
                android:layout_toRightOf="@id/v_status_system_message_item"
                android:layout_toEndOf="@id/v_status_system_message_item"
                android:textColor="@color/myBlack"
                android:layout_marginBottom="@dimen/margin_size_4"
                android:text="name"/>

            <TextView
                android:id="@+id/tv_content_system_message_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_time_system_message_item"
                android:layout_toRightOf="@id/v_status_system_message_item"
                android:layout_toEndOf="@id/v_status_system_message_item"
                android:layout_below="@id/tv_name_system_message_item"
                android:maxLines="5"
                android:layout_marginTop="@dimen/margin_size_2"
                android:textColor="@color/myGray"
                android:textSize="@dimen/font_size_12"
                android:text="content"/>

            <TextView
                android:id="@+id/tv_time_system_message_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/v_status_system_message_item"
                android:layout_toEndOf="@id/v_status_system_message_item"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/margin_size_4"
                android:textColor="@color/myGray"
                android:textSize="@dimen/font_size_12"
                android:text="time"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>

