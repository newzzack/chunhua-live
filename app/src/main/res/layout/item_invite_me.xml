<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_invite_me_item"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:layout_marginTop="@dimen/margin_size_4"
        android:layout_marginBottom="@dimen/margin_size_4"
        android:padding="0dp"
        android:layout_gravity="center_horizontal"
        card_view:cardCornerRadius="6dp"
        card_view:cardBackgroundColor="@color/myWhite">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/v_status_invite_me_item"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape_pink_view"/>

            <com.quootta.mdate.ui.view.CircleImageView
                android:id="@+id/iv_head_invite_me_item"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@id/v_status_invite_me_item"
                android:layout_marginLeft="@dimen/margin_size_10"
                android:layout_centerVertical="true"
                android:src="@mipmap/test"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/iv_head_invite_me_item"
                android:layout_marginLeft="@dimen/margin_size_8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name_item_invite_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/myBlack"
                    android:layout_marginBottom="@dimen/margin_size_4"
                    android:text="name"/>

                <TextView
                    android:id="@+id/tv_time_item_invite_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/myGray"
                    android:textSize="@dimen/font_size_12"
                    android:text="time"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_accept_item_invite_me"
                android:layout_width="74dp"
                android:layout_height="30dp"
                android:background="@drawable/shape_button_pink"
                android:textColor="@color/myWhite"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_size_8"
                android:text="@string/accept"/>

            <TextView
                android:id="@+id/tv_status_item_invite_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_size_8"
                android:text="status"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>