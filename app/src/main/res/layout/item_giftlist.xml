<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="112dp"
    android:layout_height="125dp"
    android:background="@mipmap/gift_background"
    android:layout_margin="3dp"

    >
<RelativeLayout
    android:layout_width="90dp"
    android:layout_height="76dp"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="11dp"
    android:layout_marginTop="5dp"
    android:id="@+id/gift_list_rela"
    >
    <ImageView
        android:id="@+id/gift_list_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/gift_car_in"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>
    <TextView
        android:id="@+id/gift_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="黄瓜"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:textColor="#2a2936"
        android:textSize="13sp"
        android:layout_marginBottom="3dp"
        android:layout_below="@+id/gift_list_rela"
        android:layout_centerHorizontal="true"
        />
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/gift_list_name"
    >
    <TextView
        android:id="@+id/gift_list_count"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:text="999"
        android:textColor="@color/backgroundWhite"
        android:textSize="13sp"
        android:gravity="center"
        android:background="@mipmap/gift_back"
        android:layout_alignParentBottom="true"

        />
</RelativeLayout>



</RelativeLayout>

