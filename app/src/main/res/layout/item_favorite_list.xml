<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/bg_follow_item"
    android:layout_marginLeft="9dp"
    android:layout_marginRight="9dp"
 >



    <RelativeLayout
        android:id="@+id/friend_rela"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <com.quootta.mdate.ui.view.CircleImageView
            android:id="@+id/iv_head_item_favorite"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginLeft="@dimen/margin_size_30"
            android:layout_marginRight="@dimen/margin_size_10"
            app:border_color="#fbb6da"
            android:layout_marginTop="@dimen/margin_size_5"
            android:layout_marginBottom="@dimen/margin_size_5"
            android:src="@mipmap/test"/>
    <LinearLayout
        android:id="@+id/friend_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_head_item_favorite"
        android:layout_toEndOf="@id/iv_head_item_favorite"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        >

        <TextView
            android:id="@+id/tv_name_item_favorite"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="5"
            android:textColor="@color/xiehouBlack"
            android:textSize="@dimen/font_size_16" />
        <ImageView
            android:id="@+id/tv_gender_item_favorite"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@mipmap/bg_follow_gender"
            android:src="@mipmap/ic_female"
            android:padding="8dp"
            android:layout_marginLeft="@dimen/margin_size_16"
            />
        <TextView
            android:id="@+id/tv_age_item_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25"
            android:gravity="center"
            android:textSize="@dimen/font_size_12"
            android:background="@mipmap/bg_follow_gender"
            android:textColor="@color/myWhite"
            android:layout_marginLeft="@dimen/margin_size_8"
            />

        <ImageView
            android:layout_width="17dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_location"
            android:layout_marginLeft="@dimen/margin_size_8"
            />


        <TextView
            android:id="@+id/tv_address_item_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="呼和浩特"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="4dp"
            android:maxLines="1"
            android:maxEms="5"
            android:textSize="@dimen/font_size_12"
            android:ellipsize="end"
            android:gravity="center"
            android:textColor="@color/color_9b9b9b"
            />

    </LinearLayout>

        <TextView
            android:id="@+id/tv_sign_item_favorite"
            android:layout_below="@id/friend_linear"
            android:layout_toRightOf="@id/iv_head_item_favorite"
            android:layout_toEndOf="@id/iv_head_item_favorite"
            android:layout_marginTop="@dimen/margin_size_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:textColor="@color/friend_signature"
            android:lines="1"
            android:maxEms="15"

            android:ellipsize="end"
            />


    </RelativeLayout>
</RelativeLayout>