<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundWhite"
 >



    <RelativeLayout
        android:id="@+id/friend_rela"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <com.quootta.mdate.ui.view.CircleImageView
            android:id="@+id/iv_head_item_favorite"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="@dimen/margin_size_10"
            android:layout_marginRight="@dimen/margin_size_10"
            app:border_color="#fbb6da"
            android:layout_marginTop="@dimen/margin_size_5"
            android:layout_marginBottom="@dimen/margin_size_5"
            android:src="@mipmap/test"/>
    <LinearLayout
        android:id="@+id/friend_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_head_item_favorite"
        android:layout_toEndOf="@id/iv_head_item_favorite"
        android:gravity="center"
        android:layout_marginTop="7dp"
        >
        <TextView
            android:id="@+id/tv_name_item_favorite"


            android:textSize="@dimen/font_size_16"
            android:textColor="@color/xiehouBlack"

            android:lines="1"
            android:maxEms="5"
            android:ellipsize="end"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/tv_gender_item_favorite"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/rankingsexg"
            android:layout_marginLeft="@dimen/margin_size_5"
            />
        <TextView
            android:id="@+id/tv_age_item_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25"
            android:textColor="@color/friend_age"
            android:layout_marginLeft="@dimen/margin_size_5"
            />

    </LinearLayout>
        <TextView
            android:id="@+id/tv_address_item_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---"
            android:layout_alignParentRight="true"
            android:layout_marginRight="36dp"
            android:maxLines="1"
            android:maxEms="5"
            android:ellipsize="end"
            android:textColor="@color/friend_signature"
            android:layout_marginTop="7dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/friend_map"
            android:layout_marginRight="2dp"
            android:layout_toLeftOf="@id/tv_address_item_favorite"
            android:layout_marginTop="7dp"
            />

        <TextView
            android:id="@+id/tv_sign_item_favorite"
            android:layout_below="@id/friend_linear"
            android:layout_toRightOf="@id/iv_head_item_favorite"
            android:layout_toEndOf="@id/iv_head_item_favorite"
            android:layout_marginTop="@dimen/margin_size_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/friend_signature"
            android:lines="1"
            android:maxEms="15"

            android:ellipsize="end"
            />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/friend_rela"
        android:background="@color/friend_board"/>
</RelativeLayout>