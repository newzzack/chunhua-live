<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.quootta.mdate.ui.activity.AboutUsActivity">

    <include
        android:id="@+id/include_title_bar"
        layout="@layout/title_bar" />

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="6dp"
        card_view:cardBackgroundColor="@color/backgroundWhite"
        android:layout_marginTop="@dimen/margin_size_20"
        android:layout_marginLeft="@dimen/margin_size_10"
        android:layout_marginRight="@dimen/margin_size_10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_feed_back"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="@dimen/margin_size_20"
                android:layout_marginLeft="@dimen/margin_size_10"
                android:layout_marginRight="@dimen/margin_size_10"
                android:layout_marginBottom="@dimen/margin_size_30"
                android:padding="@dimen/padding_size_4"
                android:gravity="start"
                android:background="@null"
                android:hint="@string/app_tips_text156"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btn_feed_back"
        android:layout_width="@dimen/button_width_120"
        android:layout_height="@dimen/button_height_40"
        android:background="@drawable/shape_button"
        android:layout_marginTop="@dimen/margin_size_30"
        android:layout_gravity="center_horizontal"
        android:text="@string/ensure"/>
    <!--<Button-->
        <!--android:id="@+id/user_service"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" -->
        <!--android:text="联系客服"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:background="@drawable/shape_button"-->
        <!--/>-->
    <EditText
        android:id="@+id/ed_sousuo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/backgroundWhite"
        android:visibility="gone"
        />
   <Button
       android:id="@+id/bt_sousuo"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:visibility="gone"
       android:text="@string/app_tips_text157"
       />
</LinearLayout>
