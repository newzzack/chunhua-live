<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.quootta.mdate.ui.activity.InviteDatingActivity">

    <include
        android:id="@+id/include_title_bar"
        layout="@layout/title_bar" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_8"
            android:layout_marginRight="@dimen/margin_size_8"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_10"
                android:background="@drawable/bg_invite_dating_layout">

                <EditText
                    android:id="@+id/et_invite_dating_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:padding="@dimen/padding_size_8"
                    android:textSize="@dimen/font_size_14"
                    android:layout_margin="@dimen/margin_size_4"
                    android:hint="@string/hint_invite"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_10"
                android:orientation="vertical"
                android:background="@drawable/bg_invite_dating_layout">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_20"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_current_gift_invite_dating_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/test"/>

                    <TextView
                        android:id="@+id/tv_gold_invite_dating_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_size_6"
                        android:textColor="@color/myGold"/>

                    <Button
                        android:id="@+id/btn_invite_dating_activity"
                        android:layout_width="90dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="@dimen/margin_size_10"
                        android:background="@drawable/shape_button"
                        android:text="@string/start_invite"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_size_20"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="5"
                        android:layout_marginLeft="@dimen/margin_size_4"
                        android:layout_marginRight="@dimen/margin_size_4"
                        android:layout_gravity="center_vertical"
                        android:background="@color/background" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_size_4"
                        android:layout_marginRight="@dimen/margin_size_4"
                        android:textSize="@dimen/font_size_12"
                        android:text="@string/swipe_to_more"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="5"
                        android:layout_marginLeft="@dimen/margin_size_4"
                        android:layout_marginRight="@dimen/margin_size_4"
                        android:layout_gravity="center_vertical"
                        android:background="@color/background" />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_gift_list_invite_dating_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/margin_size_30"
                    android:layout_marginLeft="@dimen/margin_size_8"
                    android:layout_marginRight="@dimen/margin_size_8"
                    android:paddingBottom="@dimen/margin_size_10">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>



</LinearLayout>
