<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fram">
        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/ranking_tab"
           android:background="@color/themeYellowDark"
            app:tabTextColor="@color/textWhite"
            app:tabSelectedTextColor="@color/backgroundWhite"
            app:tabIndicatorHeight="0dp"
            >

        </android.support.design.widget.TabLayout>

        <ImageView
            android:id="@+id/ranking_details"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ranking_details3"
            android:clickable="true"
            android:layout_alignRight="@+id/ranking_tab"
            android:layout_marginRight="10dp"
            android:layout_gravity="right|center_vertical" />
    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fram"
        android:id="@+id/ranking_vp"

        >

    </android.support.v4.view.ViewPager>
</RelativeLayout>
