<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/margin_size_20"
        android:background="@drawable/bg_invite_dating_layout"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@null"
                android:src="@mipmap/ic_close" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_size_60"
                android:background="@drawable/shape_button"
                android:gravity="center"
                android:text="@string/group_call"
                android:layout_marginTop="-6dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:paddingTop="6dp"
                android:textColor="@color/myWhite"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/img_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="@dimen/margin_size_28"
                android:background="@mipmap/ic_close_white" />
        </FrameLayout>

        <TextView
            android:id="@+id/firstText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="@string/app_tips_text121"
            android:textColor="#ef9b16"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="@dimen/font_size_12"
            android:text="@string/app_tips_text122"
            android:textColor="@color/color_494949" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="@string/app_tips_text123"
            android:textSize="@dimen/font_size_12"
            android:textColor="@color/color_494949" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/boy_btn"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_gravity="center"
                android:background="@mipmap/ic_group_call_male_nor"
                android:textSize="@dimen/margin_size_16" />

            <Button
                android:id="@+id/girl_btn"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@mipmap/ic_group_call_female_nor"
                android:textSize="@dimen/margin_size_16" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:text="@string/app_tips_text126"
            android:textColor="@color/color_494949"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/call_gorup_text"
            android:layout_width="285dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="9dp"
            android:background="@mipmap/bg_group_call_content"
            android:focusable="false"
            android:padding="6dp"
            android:text="美女我喜欢你！"
            android:textColorHint="@color/color_b9b9b9"
            android:textSize="@dimen/font_size_12" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/call_free_btn"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/font_size_20"
                android:layout_marginRight="@dimen/font_size_20"
                android:background="@drawable/shape_button"
                android:text="@string/app_tips_text127"
                android:textColor="#ffff"
                android:textSize="14dp" />

            <Button

                android:id="@+id/cash_btn"
                android:layout_width="283dp"
                android:layout_height="32dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/font_size_20"
                android:layout_marginRight="@dimen/font_size_20"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_button"
                android:text="@string/app_tips_text128"
                android:textColor="#ffff"

                android:textSize="14dp" />


            <Button
                android:id="@+id/free_btn"
                android:layout_width="283dp"
                android:layout_height="32dp"
                android:layout_above="@id/cash_btn"
                android:layout_marginLeft="@dimen/font_size_20"
                android:layout_marginRight="@dimen/font_size_20"
                android:background="@drawable/shape_button"
                android:text="@string/app_tips_text129"
                android:textColor="#ffff"
                android:textSize="14dp" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>