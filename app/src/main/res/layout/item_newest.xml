<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="2dp"
    app:cardCornerRadius="6dp"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/iv_show"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="140dp"/>

        <View
            android:id="@+id/view_trans"
            android:layout_alignBottom="@id/iv_show"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@color/transparentGray">
        </View>


        <TextView
            android:id="@+id/tv_age"
            android:layout_alignBottom="@id/iv_show"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:paddingLeft="5dp"
            android:textColor="@color/myWhite"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_gender_label"
            android:layout_alignBottom="@id/view_trans"
            android:layout_alignParentLeft="true"
            android:paddingLeft="4dp"
            android:layout_width="12dp"
            android:layout_height="24dp"
            android:src="@drawable/sugnup_boy_down"/>

        <TextView
            android:id="@+id/tv_city"
            android:layout_alignBottom="@id/iv_show"
            android:layout_alignRight="@id/iv_show"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:gravity="center_vertical"
            android:lines="1"
            android:maxEms="5"
            android:textSize="10sp"
            android:textColor="@color/myWhite"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
