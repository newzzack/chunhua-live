<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/rel_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/themePink"
        android:visibility="visible"
        android:elevation="2dp"
        >


        <ImageView
            android:id="@+id/phone_bind_back"
            android:layout_width="@dimen/toolbar_image_size"
            android:layout_height="@dimen/toolbar_image_size"
            android:padding="@dimen/padding_size_16"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_return"/>

        <!--标题-->
        <TextView
            android:id="@+id/phone_bind_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/font_size_18"
            android:textColor="@color/myBlack"
            android:text="绑定手机号"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="20dp"

        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="#fcfcfc"
        >
        <ImageView
            android:id="@+id/account_bind_phone_src"
            android:layout_width="@dimen/account_item_src"
            android:layout_height="@dimen/account_item_src"
            android:src="@drawable/phonebind_phone"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />
        <EditText
            android:id="@+id/account_bind_phone_text"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="35dp"
            android:layout_centerVertical="true"
            android:hint="输入您的手机号"
            android:layout_toRightOf="@+id/account_bind_phone_src"
            />
        <!--<RelativeLayout-->
            <!--android:id="@+id/account_bind_phone_authcode"-->
            <!--android:layout_width="80dp"-->
            <!--android:layout_height="25dp"-->
            <!--android:layout_marginRight="20dp"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:background="@color/themePink"-->
            <!--android:gravity="center"-->
            <!--&gt;-->
            <!--<TextView-->

                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="获取验证码"-->
                <!--android:textColor="#fcfcfc"-->
                <!--/>-->
        <!--</RelativeLayout>-->
        <Button
            android:id="@+id/account_bind_phone_authcode"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@color/themePink"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#fcfcfc"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/phone_bind_line"
            android:layout_marginLeft="75dp"
            />
    </RelativeLayout>
    <RelativeLayout


        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#fcfcfc"
        >
        <ImageView
            android:id="@+id/account_bind_mes_src"
            android:layout_width="@dimen/account_item_src"
            android:layout_height="@dimen/account_item_src"
            android:src="@drawable/phonebind_mes"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />
        <EditText
            android:id="@+id/account_bind_mes_text"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="35dp"
            android:layout_centerVertical="true"
            android:hint="输入您收到的验证码"
            android:layout_toRightOf="@+id/account_bind_mes_src"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/phone_bind_line"
            android:layout_marginLeft="75dp"
            />
    </RelativeLayout>

    <RelativeLayout


        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#fcfcfc"
        >
        <ImageView
            android:id="@+id/account_bind_pas_src"
            android:layout_width="@dimen/account_item_src"
            android:layout_height="@dimen/account_item_src"
            android:src="@drawable/phonebind_password"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />
        <EditText
            android:id="@+id/account_bind_pas_text"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="35dp"
            android:layout_centerVertical="true"
            android:hint="设置密码（6-16位）"
            android:password="true"
            android:inputType="textPassword"
            android:layout_toRightOf="@+id/account_bind_pas_src"
            />


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/account_bind_phone"
        android:layout_marginTop="15dp"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:background="@color/rankingYellow"
        android:layout_gravity="center_horizontal"
        >
        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:gravity="center"
            android:text="绑定手机"
            />
    </RelativeLayout>
</LinearLayout>
