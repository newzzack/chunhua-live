<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true"
        android:drawable="@drawable/shape_left_chat_radiobutton_pressed">
        <shape>
            <stroke android:color="@color/themePink" android:width="1dp"></stroke>
        </shape>
    </item>

    <item android:state_checked="false"
        android:drawable="@drawable/shape_left_chat_radiobutton_unpressed">
        <shape>
            <stroke android:color="@color/themePink" android:width="1dp"></stroke>
        </shape>
    </item>

</selector>