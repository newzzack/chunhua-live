<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  设置背景色（灰色）  -->
    <item  android:id="@android:id/background" >
        <shape>
            <corners android:radius="6dp" />
            <gradient android:startColor="@color/myGray"
                android:endColor="@color/myGray" />
        </shape>
    </item>

    <!--  设置进度条颜色（主题黄色）  -->
    <item  android:id="@android:id/progress" >
        <clip>
            <shape>
                <corners android:radius="6dp" />
                <gradient  android:startColor="@color/themePink"
                    android:endColor="@color/themePink" />
            </shape>
        </clip>
    </item>

</layer-list>